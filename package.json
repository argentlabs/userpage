{
  "name": "userpage",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@xstate/react": "^1.5.1",
    "bnc-onboard": "^1.32.0",
    "ethers": "^5.4.3",
    "lodash.chunk": "^4.2.0",
    "lottie-react": "^2.1.0",
    "qr-code-styling": "^1.6.0-rc.1",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.0",
    "styled-normalize": "^8.0.7",
    "styled-reset": "^4.3.4",
    "styled-tools": "^1.7.2",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1",
    "xstate": "^4.23.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "pretest": "npm run lint",
    "test": "yarn test:watch --watchAll=false",
    "test:watch": "react-scripts test --passWithNoTests",
    "posttest": "npm run format",
    "eject": "react-scripts eject",
    "format": "prettier --loglevel warn --write \"**/*.{js,jsx,ts,tsx,css,md,yml,yaml,json}\"",
    "lint": "eslint . --cache --fix",
    "prepare": "husky install",
    "typechain": "typechain --target ethers-v5 --out-dir ./src/generated './src/abis/**/*.json'",
    "postinstall": "yarn typechain"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^7.0.1",
    "@types/lodash.chunk": "^4.2.6",
    "@types/react-copy-to-clipboard": "^5.0.1",
    "@types/react-helmet": "^6.1.2",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.11",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": ">=10",
    "prettier": ">=2",
    "prettier-plugin-import-sort": "^0.0.7",
    "type-fest": "^1.3.0",
    "typechain": "^5.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md,yml,yaml,json}": "prettier --write"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
